<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/gray4"
                android:endColor="@color/gray1"
                android:angle="270" />
            <stroke
                android:width="1dip"
                android:color="#C8C8C8" />
            <corners
                android:radius="3dip" />
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape>
            <gradient
                android:startColor="@color/gray4"
                android:endColor="@color/gray1"
                android:angle="270" />
            <stroke
                android:width="1dip"
                android:color="#C8C8C8" />
            <corners
                android:radius="3dip" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:startColor="@null"
                android:endColor="@null"
                android:angle="270" />
            <stroke
                android:width="1dip"
                android:color="#C8C8C8" />
            <corners
                android:radius="3dip" />
        </shape>
    </item>
    
</selector>