<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/main_search"
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_button"
        android:src="@drawable/ic_search_bl" />

    <ImageButton
        android:id="@+id/main_update"
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/main_search"
        android:background="@drawable/title_button"
        android:src="@drawable/ic_update_bl" />
    
     <Button
        android:id="@+id/main_create"
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/main_update"
        android:background="@drawable/title_button"
        android:text="Create"
        android:textColor="@color/whoochblue"
        android:textStyle="bold"
        android:textSize="12sp"/>

    <ProgressBar
        android:id="@+id/main_loader"
		android:layout_centerVertical="true"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        />

</RelativeLayout>