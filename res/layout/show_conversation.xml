<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/entry_whooch_imageA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/entry_whooch_titleA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whooch Name"
                android:textColor="@color/darkblue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entry_posted_userA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/gray1" />

            <TextView
                android:id="@+id/entry_whooch_contentA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content goes here..." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dip"
            android:src="@drawable/ic_time_gr" />

        <TextView
            android:id="@+id/entry_whooch_footA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time is an illusion"
            android:textColor="@color/gray1"
            android:textSize="12sp" />


    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/entry_whooch_imageB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/entry_whooch_titleB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whooch Name"
                android:textColor="@color/darkblue"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/entry_posted_userB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/gray1" />

            <TextView
                android:id="@+id/entry_whooch_contentB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content goes here..." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dip"
            android:src="@drawable/ic_time_gr" />

        <TextView
            android:id="@+id/entry_whooch_footB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
