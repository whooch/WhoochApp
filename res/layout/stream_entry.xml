<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/entry_whooch_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/entry_whooch_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whooch Name"
                android:textColor="@color/darkblue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/entry_posted_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/gray1" />

            <TextView
                android:id="@+id/entry_whooch_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content goes here..." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginBottom="3dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dip"
            android:src="@drawable/ic_time_gr" />

        <TextView
            android:id="@+id/entry_whooch_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="@color/gray1"
            android:textSize="12sp" />
        
         <TextView
            android:id="@+id/entry_whooch_foot_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2 fans)"
            android:layout_marginLeft="3dip"
            android:textColor="@color/gray1"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/entry_update_extras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imagePlus"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/ic_plus_gr" />

            <ImageView
                android:id="@+id/imagePicture"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/ic_picture_gr" />

            <ImageView
                android:id="@+id/imageOpenClosed"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:src="@drawable/ic_open_gr"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>